<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>

    <script>
        var diameter1 = 100
        var diameter2 = 40

        var angle = 0
        var centerX = 20

        function setup() {
            createCanvas(800, 800)
            background(0)
        }

        function mouseMoved() {
            // logs
            console.log('angle: ' + angle)
            console.log('centerX: ' + centerX)
            console.log('diameter1: ' + diameter1)
            console.log('keyCode: ' + keyCode)

            //set fill and stroke
            strokeWeight(3)
            stroke(random(255), random(205), random(100))
            fill(0, random(125))

            translate(width / 2, height / 2); //move to center
            angle += .25
            rotate(angle); //rotate at increasing angle

            ellipse(centerX, diameter1, diameter1); //rotate radius,diameter

            //prevent ellipses > canvas
            if (centerX > width / 3.5) {
                centerX--
                angle++
            }
            else {
                centerX++
                angle++
            }

            //gradually increase ellipse diameter to 150
            if (diameter1 > 150) {
                diameter1--
            }
            else {
                diameter1++
            }
        }

/////////////////////////////////////////////////////////////////////////////////////////////

        function mouseDragged() {
            console.log('mouseX: ' + mouseX)
            console.log('mouseY: ' + mouseY)

            // reset to default values
            centerX = 0
            diameter1 = 100

            // rect trail
            background(mouseX / 2, mouseY / 2, 0, 25)
            strokeWeight(7)
            stroke(0)
            fill(mouseX / 2, mouseY / 2, 0)
            ellipse(mouseX, mouseY, diameter2, diameter2)

            // coords display
            textSize(15)
            textAlign(CENTER)
            strokeWeight(5)
            text("X: " + round(mouseX), mouseX, mouseY - 50)
            text("Y: " + round(mouseY), mouseX, mouseY - 30)
        }

/////////////////////////////////////////////////////////////////////////////////////////////

        function keyPressed() {
            // change bgcolor white/black
            if (keyCode == 87) { // w
                centerX = 0
                diameter1 = -90
                background(255)
            }

            if (keyCode == 66) { // b
                centerX = 0
                diameter1 = 100
                background(0)
            }
        }
    </script>

</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/alexy4744/p5js/blob/master/interaction-project.html?footer=0"></script>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>


</html>
